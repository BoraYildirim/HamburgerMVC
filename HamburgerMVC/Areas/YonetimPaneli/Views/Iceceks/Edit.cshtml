@model HamburgerMVC.Models.Icecek

@{
    ViewData["Title"] = "Edit";
    Layout = "_AdminLayout";
}
<div class="text-center">
<h1>Güncelle</h1>

<h4>Icecek</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
