@model HamburgerMVC.Models.Sos

@{
    ViewData["Title"] = "Create";
    Layout = "_AdminLayout";
}
<div class="text-center">
<h1>Sos Oluştur</h1>

<h4>Sos</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SosAdi" class="control-label"></label>
                <input asp-for="SosAdi" class="form-control" />
                <span asp-validation-for="SosAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SosFiyat" class="control-label"></label>
                <input asp-for="SosFiyat" class="form-control" />
                <span asp-validation-for="SosFiyat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geri Dön</a>
</div>


</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
