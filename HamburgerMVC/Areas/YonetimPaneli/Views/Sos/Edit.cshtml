@model HamburgerMVC.Models.Sos

@{
    ViewData["Title"] = "Edit";
    Layout = "_AdminLayout";
}
<div class="text-center">
<h1>Güncelle</h1>

<h4>Sos</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SosID" />
            <div class="form-group">
                <label asp-for="SosAdi" class="control-label"></label>
                <input asp-for="SosAdi" class="form-control" />
                <span asp-validation-for="SosAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SosFiyat" class="control-label"></label>
                <input asp-for="SosFiyat" class="form-control" />
                <span asp-validation-for="SosFiyat" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Dön</a>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
